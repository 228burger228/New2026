            friend: "–î—Ä—É–≥",
            girlfriend: "–ü–æ–¥—Ä—É–≥–∞",
            partner: "–ü–∞—Ä—Ç–Ω—ë—Ä",
            spouse: "–ú—É–∂/–ñ–µ–Ω–∞"
        };

        // ===== –ö–ê–†–¢–ê –ù–ê–ó–í–ê–ù–ò–ô –§–û–ù–û–í =====
        const backgroundNames = {
            default: "–°—Ç–∞–Ω–¥–∞—Ä—Ç–Ω—ã–π —Ñ–æ–Ω",
            chinese: "–ö–∏—Ç–∞–π—Å–∫–∏–π –ù–æ–≤—ã–π –ì–æ–¥",
            tree: "–Å–ª–∫–∞ —Å –ø–æ–¥–∞—Ä–∫–∞–º–∏",
            gifts: "–ù–æ–≤–æ–≥–æ–¥–Ω–∏–µ –ø–æ–¥–∞—Ä–∫–∏",
            snow: "–°–Ω–µ–∂–Ω—ã–π –ø–µ–π–∑–∞–∂"
        };

        // ===== –≠–õ–ï–ú–ï–ù–¢–´ =====
        const greetingText = document.getElementById('greeting-text');
        const greetingCard = document.getElementById('greeting-card');
        const generateBtn = document.getElementById('generate-btn');
        const copyBtn = document.getElementById('copy-btn');
        const screenshotBtn = document.getElementById('screenshot-btn');
        const downloadBtn = document.getElementById('download-btn');
        const notification = document.getElementById('notification');
        const shareVk = document.getElementById('share-vk');
        const shareTelegram = document.getElementById('share-telegram');
        const categoryButtons = document.querySelectorAll('.category-btn');
        const backgroundButtons = document.querySelectorAll('.background-btn');
        const selectedCategoryText = document.getElementById('selected-category-text');
        const screenshotPreview = document.getElementById('screenshot-preview');
        const screenshotImage = document.getElementById('screenshot-image');
        const garland = document.getElementById('garland');
        const stars = document.getElementById('stars');
        const floatingSnowflakes = document.getElementById('floating-snowflakes');

        // ===== –ü–ï–†–ï–ú–ï–ù–ù–´–ï –°–û–°–¢–û–Ø–ù–ò–Ø =====
        let currentCategory = 'all';
        let currentBackground = 'default';
        let currentScreenshot = null;

        // ===== –°–û–ó–î–ê–ù–ò–ï –î–ï–ö–û–†–ê–¢–ò–í–ù–´–• –≠–õ–ï–ú–ï–ù–¢–û–í =====
        function createStars() {
            for (let i = 0; i < 50; i++) {
                const star = document.createElement('div');
                star.classList.add('star');

                const size = Math.random() * 3 + 1;
                const x = Math.random() * 100;
                const y = Math.random() * 100;
                const duration = Math.random() * 2 + 1;
                const delay = Math.random() * 2;

                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.left = `${x}%`;
                star.style.top = `${y}%`;
                star.style.animationDuration = `${duration}s`;
                star.style.animationDelay = `${delay}s`;

                stars.appendChild(star);
            }
        }

        function createFloatingSnowflakes() {
            const emojis = ['‚ùÑÔ∏è', '‚ú®', '‚≠ê', 'üéÅ', 'üéÑ', 'üéÄ', 'üîî'];

            for (let i = 0; i < 8; i++) {
                const snowflake = document.createElement('div');
                snowflake.classList.add('floating-snowflake');

                const emoji = emojis[Math.floor(Math.random() * emojis.length)];
                const size = Math.random() * 20 + 20;
                const x = Math.random() * 100;
                const duration = Math.random() * 10 + 20;
                const delay = Math.random() * 10;

                snowflake.textContent = emoji;
                snowflake.style.fontSize = `${size}px`;
                snowflake.style.left = `${x}%`;
                snowflake.style.animationDuration = `${duration}s`;
                snowflake.style.animationDelay = `${delay}s`;

                floatingSnowflakes.appendChild(snowflake);
            }
        }

        function toggleGarland() {
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –≥–∏—Ä–ª—è–Ω–¥—ã –Ω–∞ –ø—Ä–∞–∑–¥–Ω–∏—á–Ω—ã—Ö —Ñ–æ–Ω–∞—Ö
            const festiveBackgrounds = ['chinese', 'tree', 'gifts'];
            if (festiveBackgrounds.includes(currentBackground)) {
                garland.style.display = 'block';
            } else {
                garland.style.display = 'none';
            }
        }

        // ===== –£–ü–†–ê–í–õ–ï–ù–ò–ï –§–û–ù–ê–ú–ò =====
        function selectBackground(bgType) {
            backgroundButtons.forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.bg === bgType) {
                    btn.classList.add('active');
                }
            });

            document.body.className = `bg-${bgType}`;
            currentBackground = bgType;

            // –û–±–Ω–æ–≤–ª—è–µ–º –≥–∏—Ä–ª—è–Ω–¥—ã
            toggleGarland();

            showNotification(`–§–æ–Ω –∏–∑–º–µ–Ω—ë–Ω: ${backgroundNames[bgType]}`);
        }

        // ===== –£–ü–†–ê–í–õ–ï–ù–ò–ï –ö–ê–¢–ï–ì–û–†–ò–Ø–ú–ò =====
        function selectCategory(category) {
            categoryButtons.forEach(btn => {
                btn.classList.remove('active');
            });

            const selectedBtn = document.querySelector(`[data-category="${category}"]`);
            selectedBtn.classList.add('active');

            currentCategory = category;
            selectedCategoryText.textContent = categoryNames[category];

            showNotification(`–í—ã–±—Ä–∞–Ω–∞ –∫–∞—Ç–µ–≥–æ—Ä–∏—è: ${categoryNames[category]}`);
            setTimeout(generateGreeting, 300);
        }

        // ===== –ì–ï–ù–ï–†–ê–¢–û–† –ü–û–ó–î–†–ê–í–õ–ï–ù–ò–ô =====
        function generateGreeting() {
            const greetings = greetingDatabase[currentCategory];

            if (!greetings || greetings.length === 0) {
                greetingText.textContent = "–ü–æ–∑–¥—Ä–∞–≤–ª–µ–Ω–∏—è –¥–ª—è —ç—Ç–æ–π –∫–∞—Ç–µ–≥–æ—Ä–∏–∏ –≤—Ä–µ–º–µ–Ω–Ω–æ –æ—Ç—Å—É—Ç—Å—Ç–≤—É—é—Ç.";
                return;
            }

            const randomIndex = Math.floor(Math.random() * greetings.length);
            const greeting = greetings[randomIndex];

            greetingText.style.opacity = '0';

            setTimeout(() => {
                greetingText.textContent = greeting;
                greetingText.style.opacity = '1';
                greetingText.classList.add('fade-in');

                updateShareLinks(greeting);
            }, 300);

            showNotification(`–°–æ–∑–¥–∞–Ω–æ –Ω–æ–≤–æ–µ –ø–æ–∑–¥—Ä–∞–≤–ª–µ–Ω–∏–µ –¥–ª—è ${categoryNames[currentCategory]}`);
        }

        // ===== –°–ò–°–¢–ï–ú–ê –°–ö–†–ò–ù–®–û–¢–û–í =====
        async function createScreenshot() {
            try {
                showNotification('üñºÔ∏è –°–æ–∑–¥–∞—é –æ—Ç–∫—Ä—ã—Ç–∫—É...');

                // –í—Ä–µ–º–µ–Ω–Ω–æ —Å–∫—Ä—ã–≤–∞–µ–º –¥–µ–∫–æ—Ä–∞—Ç–∏–≤–Ω—ã–µ —ç–ª–µ–º–µ–Ω—Ç—ã –¥–ª—è —á–∏—Å—Ç–æ–≥–æ —Å–∫—Ä–∏–Ω—à–æ—Ç–∞
                const decorations = document.querySelectorAll('.card-decoration');
                decorations.forEach(el => el.style.opacity = '0');

                const canvas = await html2canvas(greetingCard, {
                    scale: 2,
                    backgroundColor: null,
                    useCORS: true,
                    logging: false,
                    allowTaint: true
                });

                decorations.forEach(el => el.style.opacity = '0.5');

                currentScreenshot = canvas.toDataURL('image/png', 1.0);
                screenshotImage.src = currentScreenshot;
                screenshotPreview.style.display = 'block';
                screenshotPreview.scrollIntoView({ behavior: 'smooth' });

                showNotification('‚úÖ –û—Ç–∫—Ä—ã—Ç–∫–∞ —Å–æ–∑–¥–∞–Ω–∞! –¢–µ–ø–µ—Ä—å –º–æ–∂–Ω–æ —Å–∫–∞—á–∞—Ç—å –∏–ª–∏ –æ—Ç–ø—Ä–∞–≤–∏—Ç—å');
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è —Å–∫—Ä–∏–Ω—à–æ—Ç–∞:', error);
                showNotification('‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–æ–∑–¥–∞–Ω–∏–∏ –æ—Ç–∫—Ä—ã—Ç–∫–∏. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â—ë —Ä–∞–∑.');
            }
        }

        function downloadScreenshot() {
            if (!currentScreenshot) return;

            const link = document.createElement('a');
            link.download = `–Ω–æ–≤–æ–≥–æ–¥–Ω—è—è-–æ—Ç–∫—Ä—ã—Ç–∫–∞-${Date.now()}.png`;
            link.href = currentScreenshot;
            link.click();

            showNotification('üì• –û—Ç–∫—Ä—ã—Ç–∫–∞ —Å–∫–∞—á–∞–Ω–∞!');
        }

        // ===== –ö–û–ü–ò–†–û–í–ê–ù–ò–ï –¢–ï–ö–°–¢–ê =====
        function copyToClipboard() {
            const text = greetingText.textContent;

            navigator.clipboard.writeText(text).then(() => {
                showNotification(`–ü–æ–∑–¥—Ä–∞–≤–ª–µ–Ω–∏–µ –¥–ª—è "${categoryNames[currentCategory]}" —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–æ! üìã`);
            }).catch(err => {
                console.error('–û—à–∏–±–∫–∞ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è: ', err);
                showNotification('–ù–µ —É–¥–∞–ª–æ—Å—å —Å–∫–æ–ø–∏—Ä–æ–≤–∞—Ç—å —Ç–µ–∫—Å—Ç üò¢');
            });
        }

        // ===== –®–ê–†–ò–ù–ì =====
        function updateShareLinks(text) {
            const encodedText = encodeURIComponent(
                `üéÑ –ù–æ–≤–æ–≥–æ–¥–Ω–µ–µ –ø–æ–∑–¥—Ä–∞–≤–ª–µ–Ω–∏–µ –¥–ª—è ${categoryNames[currentCategory]}:\n\n` +
                text + 
                `\n\n‚ú® –°–æ–∑–¥–∞–π—Ç–µ —Å–≤–æ—é –æ—Ç–∫—Ä—ã—Ç–∫—É: ${window.location.href}`
            );

            shareVk.href = `https://vk.com/share.php?url=${encodeURIComponent(window.location.href)}&title=${encodeURIComponent(`–ü–æ–∑–¥—Ä–∞–≤–ª–µ–Ω–∏–µ –¥–ª—è ${categoryNames[currentCategory]}`)}&comment=${encodedText}`;

            shareTelegram.href = `https://t.me/share/url?url=${encodeURIComponent(window.location.href)}&text=${encodedText}`;
        }

        // ===== –£–í–ï–î–û–ú–õ–ï–ù–ò–Ø =====
        function showNotification(message) {
            notification.textContent = message;
            notification.style.display = 'block';

            setTimeout(() => {
                notification.style.display = 'none';
            }, 3000);
        }

        // ===== –°–ù–ï–ñ–ò–ù–ö–ò =====
        function createSnowflakes() {
            const container = document.getElementById('snowflakes-container');
            const snowflakesCount = window.innerWidth < 768 ? 40 : 80;

            for (let i = 0; i < snowflakesCount; i++) {
                const snowflake = document.createElement('div');
                const size = Math.random() * 5 + 2;
                const startX = Math.random() * 100;
                const animationDuration = Math.random() * 10 + 10;

                snowflake.style.cssText = `
                    position: absolute;
                    width: ${size}px;
                    height: ${size}px;
                    background: var(--snow-color);
                    border-radius: 50%;
                    opacity: ${Math.random() * 0.7 + 0.3};
                    left: ${startX}%;
                    top: -10px;
                    pointer-events: none;
                    filter: blur(${size * 0.3}px);
                    animation: fall ${animationDuration}s linear infinite;
                    animation-delay: ${Math.random() * -20}s;
                `;

                const keyframes = `
                    @keyframes fall-${i} {
                        0% {
                            transform: translate(${Math.sin(i) * 100}px, 0) rotate(0deg);
                        }
                        100% {
                            transform: translate(${Math.sin(i) * 100}px, 100vh) rotate(360deg);
                        }
                    }
                `;

                const style = document.createElement('style');
                style.textContent = keyframes;
                document.head.appendChild(style);

                snowflake.style.animation = `fall-${i} ${animationDuration}s linear infinite`;
                container.appendChild(snowflake);
            }
        }

        // ===== –û–ë–†–ê–ë–û–¢–ß–ò–ö–ò –°–û–ë–´–¢–ò–ô =====
        generateBtn.addEventListener('click', generateGreeting);
        copyBtn.addEventListener('click', copyToClipboard);
        screenshotBtn.addEventListener('click', createScreenshot);
        downloadBtn.addEventListener('click', downloadScreenshot);

        categoryButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                selectCategory(btn.dataset.category);
            });
        });

        backgroundButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                selectBackground(btn.dataset.bg);
            });
        });

        shareVk.addEventListener('click', (e) => {
            e.preventDefault();
            window.open(shareVk.href, '_blank', 'width=600,height=400');
        });

        shareTelegram.addEventListener('click', (e) => {
            e.preventDefault();
            window.open(shareTelegram.href, '_blank', 'width=600,height=400');
        });

        // ===== –ò–ù–ò–¶–ò–ê–õ–ò–ó–ê–¶–ò–Ø =====
        window.addEventListener('DOMContentLoaded', () => {
            createSnowflakes();
            createStars();
            createFloatingSnowflakes();
            generateGreeting();
            updateShareLinks(greetingText.textContent);
            toggleGarland();

            setTimeout(() => {
                showNotification('‚ú® –î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å! –í—ã–±–µ—Ä–∏—Ç–µ —Ñ–æ–Ω –∏ –ø–æ–ª—É—á–∞—Ç–µ–ª—è –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è –æ—Ç–∫—Ä—ã—Ç–∫–∏');
            }, 1500);
        });

        // –ê–¥–∞–ø—Ç–∞—Ü–∏—è –ø—Ä–∏ –∏–∑–º–µ–Ω–µ–Ω–∏–∏ —Ä–∞–∑–º–µ—Ä–∞ –æ–∫–Ω–∞
        let resizeTimeout;
        window.addEventListener('resize', () => {
            clearTimeout(resizeTimeout);
            resizeTimeout = setTimeout(() => {
                const container = document.getElementById('snowflakes-container');
                while (container.firstChild) {
                    container.firstChild.remove();
                }
                createSnowflakes();
            }, 250);
        });

        // –ü–æ–∫–∞–∑ –ø–æ–¥—Å–∫–∞–∑–∫–∏ –ø—Ä–∏ –ø–µ—Ä–≤–æ–º –ø–æ—Å–µ—â–µ–Ω–∏–∏
        if (!localStorage.getItem('instructionsSeen')) {
            setTimeout(() => {
                showNotification('üé® –¢–µ–ø–µ—Ä—å –≤—ã –º–æ–∂–µ—Ç–µ –≤—ã–±–∏—Ä–∞—Ç—å —Ä–∞–∑–Ω—ã–µ —Ñ–æ–Ω—ã –¥–ª—è –æ—Ç–∫—Ä—ã—Ç–∫–∏!');
                localStorage.setItem('instructionsSeen', 'true');
            }, 2000);
        }
    </script>
</body>
</html>
